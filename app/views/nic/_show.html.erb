<div class="display-control-wrapper">

  <h1>nic</h1>
  <hr class="display-top"> 
  <hr class="display-divide"> 

  <div class="display-list-wrapper">
    <table class="display-list">
      <%= display_list_attribute 'hardware address', @nic.hw_address, :class=>'even'%>
      <%= display_list_attribute 'physical id', @nic.physical_id, :class=>'odd'%>
      <%= display_list_attribute 'created at', @nic.created_at, :class=>'even'%>
      <%= display_list_attribute 'updated at', @nic.updated_at, :class=>'odd'%>
    </table>
  </div>
  
  <hr class="display-divide"> 
  <hr class="display-bottom"> 

</div>
