<% display_control(@system_group) do |model| %>

  <%= display_header(:model => model) %>

  <% display_list(model) do |m| %>
    <%= display_list_attribute m, :name %>
    <%= display_list_attribute m, :gid %>
    <%= display_list_attribute m, :created_at %>
    <%= display_list_attribute m, :updated_at %>
  <% end %>  
  
  <%= display_buttons %>

  <% unless @network_interface_terminations.blank? %> 
    <hr class="display-divide">     
    <%= render :partial => "network_interface_terminations/network_interface_terminations_summary" %>
    <hr class="display-bottom"> 
  <% end %>

<% end %>  
