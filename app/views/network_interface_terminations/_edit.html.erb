<div class="display-control-wrapper">

  <h1>network _interface termination: <em><%= @network_interface_termination.name%></em></h1>
  <hr class="display-top"> 
  <hr class="display-divide"> 

  <% display_list(@network_interface_termination) do |nt| %>
      <%= display_list_attribute nt, :name %>
      <%= display_list_attribute nt, :ip_address %>
      <%= display_list_attribute nt, :broadcast_address %>
      <%= display_list_attribute nt, :mask %>
      <%= display_list_attribute nt, :ipv6_address %>
      <%= display_list_attribute nt, :link_encapsulation %>
      <%= display_list_attribute nt, :scope %>
      <%= display_list_attribute nt, :status %>
      <%= display_list_attribute nt, :mtu %>
      <%= display_list_attribute nt, :metric %>
      <%= display_list_attribute nt, :txqueuelen %>
      <%= display_list_attribute nt, :interrrupt %>
      <%= display_list_attribute nt, :base_address %>
      <%= display_list_attribute nt, :created_at %>
      <%= display_list_attribute nt, :updated_at %>
  <% end %>  
  
  <hr class="display-divide"> 
  <hr class="display-bottom"> 

</div>
